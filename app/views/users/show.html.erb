<h1>
    <%= "Your Profile:" if current_user == @user %>
    <%= @user.first_name %>
</h2>

<%= link_to "Edit Profile", "/users/#{@user.id}/edit" if current_user == @user %>

<h2>Families:</h2>

<ul>
    <% @user.families.each do |family| %>
        <li><%= link_to family.last_name, family_path(family) %></li>
    <% end %>
</ul>