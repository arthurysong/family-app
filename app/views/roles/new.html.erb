<%= flash[:notice] %><br>

<%= render partial: 'application/errors', locals: { object: @role } %>

<%= form_for @family, method: :post, url: family_roles_path(@family) do |f| %>
    
    <% if !!@family.password_digest %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
    <% end %>

    <%= label_tag "title", "Choose your title:" %>
    <%= select_tag "title", raw("<option>Mom</option><option>Dad</option><option>Eldest</option><option selected='selected'>Middle</option><option>Youngest</option>") %>
    <br>

    <%= f.submit "Join Family" %>
<% end %>